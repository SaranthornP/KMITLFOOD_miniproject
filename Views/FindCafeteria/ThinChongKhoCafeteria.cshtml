@model IEnumerable<ProjectKMITL.Models.ResModel>;
@{
    ViewData["Title"] = "ThinChongKho Cafeteria";
}
<div class="container-fluid">
    <div class="previous" style="cursor:pointer" onclick="location.href='@Url.Action("Index")'">
        <h3 class="d-inline-block">&#8249 โรงอาหารถิ่นชงโค</h3>
    </div>

    <div class="row">
        @foreach (var ResModel in Model)
        {
            <form class=" Restaurant col-xl-4 col-sm-6" action="@Url.Action("SetTempData")" method="POST">
                <input type="hidden" name="value" value="@ResModel.detail" />
                <button class="card shadow-sm text-center my-3 p-0 d-flex justify-content-between align-items-center " style="cursor:pointer">
                    <img class="img-fluid" src="~/Images/@ResModel.img" alt="@ResModel.name">
                    <div class="card-body">
                        <p class="card-text">@ResModel.detail</p>
                        <div class="d-flex justify-content-between align-items-center">
                        </div>
                    </div>
                </button>
            </form>

        }
    </div>
</div>