@model IEnumerable<ProjectKMITL.Models.ResModel>;
@{
    ViewData["Title"] = "Cafeteria C";
}
<div class="container-fluid">
    <div class="previous" style="cursor:pointer" onclick="location.href='@Url.Action("Index")'">
        <h3 class="d-inline-block">&#8249 โรงอาหาร C</h3>
    </div></h3>
    </div>

    <div class="row">
        @foreach (var ResModel in Model)
        {
            <div class="col-xl-4 col-sm-6 text-center my-3 Restaurant" style="cursor:pointer" onclick="location.href='@Url.Action("FindCafeteria")'">
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="img-fluid" src="~/Images/@ResModel.img" alt="@ResModel.name">
                        <div class="card-body">
                            <p class="card-text">@ResModel.detail</p>
                            <div class="d-flex justify-content-between align-items-center">
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        }
    </div>
</div>